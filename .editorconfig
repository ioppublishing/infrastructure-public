# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*]
trim_trailing_whitespace = true

# Set default charset
[*.pp,*.rb,*.yaml,*.yml,*.json]
charset = utf-8

# 2 space indentation
[*.pp,*.rb,*.yaml,*.yml,*.json]
indent_style = space
indent_size = 2

# 4 space indentation
[Jenkinsfile]
indent_style = space
indent_size = 4

# 2 space indentation
[Vagrantfile]
indent_style = space
indent_size = 2
